{% extends 'base.html.twig' %}

{% block title %}Search
{% endblock %}
{% block boosstrap %}
	{% include 'Components/boot.php' %}
{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('/Css/style.css') }}">
{% endblock %}
{% block body %}
	{% block header %}
		{{ parent() }}
	{% endblock %}
	{% block hero %}
		<div class="page-bg"></div>
	{% endblock %}
	<div class="page-wrapper"></div>

	{% block custom %}

		<div class="animation-wrapper">
			<div class="particle particle-1"></div>
			<div class="particle particle-2"></div>
			<div class="particle particle-3"></div>
			<div class="particle particle-4"></div>
		</div>
	</div>
	<div class="container m-auto">
		<div class="row row-cols-4">
			{% for find in findType %}
				<div class="d-flex align-items-stretch">
					<div class="card mt-3 " style="width: 18rem;">
						<img src="{{find.image}}" class="card-img-top" alt="...">
						<div class="card-body d-flex flex-column">
							<h5 class="card-title">{{find.name}}</h5>
							<p class="card-text">{{find.date|date('y  M,  D - g:i a')}}</p>
							{# <a href="manage_event/show/{{find.id}}" class="btn">Details</a>
															<a href="manage_event/edit/{{find.id}}" class="btn mt-3">Edit</a> #}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}{% endblock %}
