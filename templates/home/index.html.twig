{% extends 'base.html.twig' %}

{% block title %}All Events in Vienna
{% endblock %}
{% block boosstrap %}
	{% include 'Components/boot.php' %}
{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('/Css/style.css') }}">
{% endblock %}
{% block body %}
{% block header %}
	{{ parent() }}
{% endblock %}
{% block hero %}
	<div class="page-bg"></div>

	<div class="animation-wrapper">
		<div class="particle particle-1"></div>
		<div class="particle particle-2"></div>
		<div class="particle particle-3"></div>
		<div class="particle particle-4"></div>
	</div>
{% endblock %}


{# {% block main %} #}
	{# <div class="page-wrapper"></div> #}
	{# {% endblock %} #}

	{% block custom %}
		<div class="flexDance">
			<img class="img-fluid danceIcon" src="https://img.freepik.com/premium-vector/butterfly-logo-icon-with-human-face_491211-23.jpg?w=826" alt="">
			{# <h5 class="h5 danceText">
				All Events in Vienna</h5>
			<!-- Example split danger button --> #}
			<div class="btn-group danceText">
				<button type="button" class="btn ">Search</button>
				<button type="button" class="btn  dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
					<span class="visually-hidden">Toggle Dropdown</span>
				</button>
				<ul class="dropdown-menu">
					<li>
						<a class="dropdown-item" href="/manage_event/find/Dance">Dance</a>
					</li>
					<li>
						<a class="dropdown-item" href="/manage_event/find/Theater">Theater</a>
					</li>
					<li>
						<a class="dropdown-item" href="/manage_event/find/Opera">Opera</a>
					</li>
					<li>
						<a class="dropdown-item" href="/manage_event/find/Painting">Painting</a>
					</li>
					<li>
						<a class="dropdown-item" href="/manage_event/find/Classic">Classic</a>
					</li>
					<li>
						<a class="dropdown-item" href="/manage_event/find/Design">Design</a>
					</li>
				</ul>
			</div>
		</div>

		<div
			class="container m-auto">
			{# <a href="destinations/create" class="btn btn-primary">Create New Destination</a> #}
			<div class="row row-cols-4">
				{% for events in allEvents %}
					<div class="d-flex align-items-stretch">
						<div class="card mt-3 " style="width: 18rem;">
							<img src="{{events.image}}" class="card-img-top" alt="...">
							<div class="card-body d-flex flex-column">
								<h5 class="card-title">{{events.name}}</h5>
								<p class="card-text">{{events.date|date('y  M,  D - g:i a')}}</p>
								<a href="manage_event/show/{{events.id}}" class="btn">Details</a>
								<a href="manage_event/edit/{{events.id}}" class="btn mt-3">Edit</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endblock %}
{% endblock %}
