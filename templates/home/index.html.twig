{% extends 'base.html.twig' %}

{% block title %}All Events in Vienna
{% endblock %}
{% block boosstrap %}
	{% include 'Components/boot.php' %}
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="Css/style.css">
{% endblock %}
{% block body %}
	{% block header %}
		{{ parent() }}
	{% endblock %}
	{% block hero %}
		{{ parent() }}
	{% endblock %}
	{% block main %}
		<div class="flexDance">
			<img class="img-fluid danceIcon" src="https://img.freepik.com/premium-vector/butterfly-logo-icon-with-human-face_491211-23.jpg?w=826" alt="">
			<h5 class="h5 danceText">
				All Events in Vienna</h5>
		</div>

		<div
			class="container m-auto">
			{# <a href="destinations/create" class="btn btn-primary">Create New Destination</a> #}
			<div class="row row-cols-3">
				{% for events in allEvents %}
					<div class="d-flex align-items-stretch">
						<div class="card mt-3 " style="width: 18rem;">
							<img src="{{events.image}}" class="card-img-top" alt="...">
							<div class="card-body d-flex flex-column">
								<h5 class="card-title">{{events.name}}</h5>
								<p class="card-text">{{events.date|date()}}</p>
								<a href="manage_event/show/{{events.id}}" class="btn">Details</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endblock %}
{% endblock %}
