{% extends 'base.html.twig' %}

{# {% block boosstrap %}{{ parent() }}{% endblock %} #}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('/Css/style.css') }}">
{% endblock %}
{% block body %}
	{% block header %}
		{{ parent() }}
	{% endblock %}
	{% block hero %}
		<div class="page-bg"></div>
	{% endblock %}

	<div class="page-wrapper"></div>

	{% block custom %}

		<div class="animation-wrapper">
			<div class="particle particle-1"></div>
			<div class="particle particle-2"></div>
			<div class="particle particle-3"></div>
			<div class="particle particle-4"></div>
		</div>

		<div class="container mt-5">
			<div class="row">
				<div class="card col-md-12 p-3">
					<div class="row ">
						<div class="col-md-4">
							<img class="w-100 h-100" src="{{event.image}}">
						</div>
						<div class="col-md-8">
							<div class="card-block">
								<h6 class="card-title">{{event.name}}</h6>
								<p class="card-text text-justify">{{event.type}}</p>
								<p class="card-text text-justify">{{event.description}}</p>
								<p class="card-text text-justify">{{event.date|date()}}</p>
								<p class="card-text text-justify">{{event.email}}</p>
								<p class="card-text text-justify">{{event.phone}}</p>
								<p class="card-text text-justify">{{event.address}}</p>
								<a href="/" class="backLink link-body-emphasis link-offset-2 link-underline-opacity-25 link-underline-opacity-75-hover"><i class="bi bi-arrow-left-square-fill"></i> Back to Home</a><hr>
								<form method="post" action="{{ path('app-manage-delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">

								<button class="btn btnDelete float-end">Delete</button>

							</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
	{% block footer %}
			
	{% endblock %}
{% endblock %}
